# Database
DATABASE_URL=sqlite:///./data/vulmgt.db

# Jira Configuration
JIRA_URL=https://youraccount.atlassian.net/
JIRA_EMAIL=youremail@gmail.com
JIRA_API_TOKEN=<KEY>
JIRA_PROJECT_KEY=<PROJECT CODE eg VMB>

# Claude API
ANTHROPIC_API_KEY=sk-ant-...

# SLA Configuration (days)
SLA_CRITICAL=14
SLA_HIGH=14
SLA_MEDIUM=90
SLA_LOW=180

# Escalation threshold (percent of SLA elapsed)
ESCALATION_THRESHOLD_PERCENT=75

# Environment settings
# Set to 'production' to disable time simulation and other debug features
ENVIRONMENT=development

# Security: Set to false in production to disable time simulation
ENABLE_TIME_SIMULATION=true
